<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des produits</title>
</head>
<body>
<h1>Cliquez sur un produit pour le modifier</h1>
{% for produit in produits  %}
    <p><a href="{{ path('modifier', {'id':produit.id}) }}">{{ produit.ref }} - {{ produit.prix }}
        </a>
        <a href="{{ path('supprimer', {'id':produit.id}) }}">Supprimer</a></p>
        <a href="{{ path('modifier', {'id':produit.id}) }}">Modifier</a></p>
    
{% endfor %}

</body>
</html>